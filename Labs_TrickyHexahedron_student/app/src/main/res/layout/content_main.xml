<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">
	<ScrollView
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="16dp">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Стороны прямоугольного параллелепипеда"
					android:textSize="18sp"
					android:gravity="center"/>
			<TextView
					android:id="@+id/side_a_label"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/side_a_text"/>

			<EditText
					android:id="@+id/side_a"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:maxLength="15"/>
			<TextView
					android:id="@+id/side_b_label"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/side_b_text"/>

			<EditText
					android:id="@+id/side_b"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:maxLength="15"/>
			<TextView
					android:id="@+id/side_c_label"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/side_c_text"/>

			<EditText
					android:id="@+id/side_c"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:maxLength="15"/>

			<Spinner
					android:id="@+id/spinner"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			<Button
					android:id="@+id/calculate"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Найти"/>
			<TextView
					android:id="@+id/solution"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:focusable="true"
					android:text="Результат"
					android:textSize="16sp"/>

		</LinearLayout>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>